                Context="conversation"
                LoadNextItems="@FetchConversationsAsync"
                ItemSize="72f"
                GetScrollContainerRef="@(() => GetListContainerRef.Invoke())">
    <ItemTemplate>
        <ConversationListItem Conversation="conversation" @key="conversation.IdConversation" />
    </ItemTemplate>
    <LoadingTemplate>
        <SkeletonLoading Count="2" />
    </LoadingTemplate>
</InfiniteScroll>